{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript":{
		"formatter": {
			"semicolons" : "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style" :{
				"useImportType": "off",
				"noNonNullAssertion": "off"
			},
			"a11y" : {
				 "useKeyWithClickEvents": "off"
			},
			"correctness" : {
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	}
}
